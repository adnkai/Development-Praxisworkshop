

<form  method="post" class="mb-3">
    <select name="TodoLists" id="todoList">
        @foreach (var item in Model.todoLists)
        {
            <option value=@item.RowKey>@item.RowKey</option>
        }
    </select>
    @if (Model.todoLists.Count > 1) {
        <button type="submit" class="btn btn-danger" asp-page-handler="DeleteToDoList">Submit</button>        
    }
</form>


<form  method="post" class="mb-3">
  <div class="mb-3">
    <label for="todolistname" class="form-label">ToDo List Name</label>
    <input type="text" class="form-control" id="todolistname" aria-describedby="todolistHelp" name="todolistname">
    <div id="todoHelp" class="form-text">What do you want to do?</div>
  </div>
  <button type="submit" class="btn btn-primary" asp-page-handler="CreateToDoList">Submit</button>
</form>